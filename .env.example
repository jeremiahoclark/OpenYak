# Yak runtime environment (copy to .env and fill secrets)
# Notes:
# 1) Canonical config keys use YAK_ with nested paths, e.g. YAK_OLLAMA__MODEL
# 2) Legacy flat keys are still accepted and auto-mapped at startup

# Core
YAK_ENV=development
YAK_LOG_LEVEL=INFO

# Ollama / LLM routing (canonical)
YAK_OLLAMA__BASE_URL=http://127.0.0.1:11434
YAK_OLLAMA__MODEL=nemotron-3-nano
YAK_OLLAMA__FALLBACK_MODEL=glm-4.7-flash:q8_0
YAK_OLLAMA__TOOL_FAILOVER_THRESHOLD=3
YAK_OLLAMA__TIMEOUT_SECONDS=120

# Optional legacy Ollama aliases
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=nemotron-3-nano
OLLAMA_FALLBACK_MODEL=glm-4.7-flash:q8_0
OLLAMA_TOOL_FAILOVER_THRESHOLD=3
OLLAMA_TIMEOUT_SECONDS=120

# Email connector (canonical)
YAK_CHANNELS__EMAIL__ENABLED=false
YAK_CHANNELS__EMAIL__CONSENT_GRANTED=false
YAK_CHANNELS__EMAIL__IMAP_HOST=imap.gmail.com
YAK_CHANNELS__EMAIL__IMAP_PORT=993
YAK_CHANNELS__EMAIL__IMAP_USERNAME=your_email@example.com
YAK_CHANNELS__EMAIL__IMAP_PASSWORD=app_password_here
YAK_CHANNELS__EMAIL__SMTP_HOST=smtp.gmail.com
YAK_CHANNELS__EMAIL__SMTP_PORT=587
YAK_CHANNELS__EMAIL__SMTP_USERNAME=your_email@example.com
YAK_CHANNELS__EMAIL__SMTP_PASSWORD=app_password_here
YAK_CHANNELS__EMAIL__FROM_ADDRESS=your_email@example.com

# Optional legacy email aliases
EMAIL_IMAP_HOST=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_IMAP_USERNAME=your_email@example.com
EMAIL_IMAP_PASSWORD=app_password_here
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your_email@example.com
EMAIL_SMTP_PASSWORD=app_password_here
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=app_password_here

# Telegram / Discord / Slack (canonical)
YAK_CHANNELS__TELEGRAM__TOKEN=telegram_bot_token_here
YAK_CHANNELS__TELEGRAM__GROQ_API_KEY=optional_groq_api_key_for_voice_transcription
YAK_CHANNELS__DISCORD__TOKEN=discord_bot_token_here
YAK_CHANNELS__SLACK__BOT_TOKEN=slack_bot_token_here
YAK_CHANNELS__SLACK__APP_TOKEN=slack_app_token_here

# Optional legacy chat aliases
TELEGRAM_BOT_TOKEN=telegram_bot_token_here
TELEGRAM_GROQ_API_KEY=optional_groq_api_key_for_voice_transcription
DISCORD_BOT_TOKEN=discord_bot_token_here
SLACK_BOT_TOKEN=slack_bot_token_here
SLACK_APP_TOKEN=slack_app_token_here

# Tooling
YAK_TOOLS__WEB__SEARCH__API_KEY=brave_api_key_here
BRAVE_API_KEY=brave_api_key_here
GROQ_API_KEY=optional_groq_api_key_here

# Video workflow (Fal)
FAL_KEY=fal_api_key_here

# Image backend: diffusers | flux_server | flux2_cli
YAK_IMAGE_BACKEND=flux_server
YAK_FLUX_SERVER_URL=http://127.0.0.1:8010

# Google Calendar (service account, read-only)
YAK_TOOLS__CALENDAR__ENABLED=false
YAK_TOOLS__CALENDAR__SERVICE_ACCOUNT_KEY_FILE=/path/to/service-account-key.json
YAK_TOOLS__CALENDAR__CALENDAR_ID=your_calendar@gmail.com
YAK_TOOLS__CALENDAR__TIMEZONE=America/Chicago

# Future phases / optional integrations
GOOGLE_CLIENT_ID=google_client_id_here
GOOGLE_CLIENT_SECRET=google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8080/oauth/callback
OPENROUTER_API_KEY=openrouter_api_key_here
MOONSHOT_API_KEY=moonshot_api_key_here
HF_TOKEN=your_huggingface_token_here
